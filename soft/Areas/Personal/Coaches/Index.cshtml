    ViewData["Title"] = "Index";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].Certifications)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].ValidFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoachData[0].ValidTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CoachData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certifications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidTo)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
